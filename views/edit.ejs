<%- include('partials/header') %>

<div class="container">
	
	<div class="row">
		<h1 style="text-align: center;">Edit your listing for:</h1>
		<h2 style="text-align: center;">
			<%= foundHouse.houseNumber %> <%= foundHouse.streetName %> <%= foundHouse.postCode %>
		</h2>


		<!-- 30% of the container and zero on the top and bottom and auto left and right -->
		<div style="width: 30%; margin: 25px auto;">
			<form action="/forsale/<%= foundHouse.id %>?_method=PUT" method="POST">
				<!-- from-group > creates a group and gives the elements space -->
				<div class="form-group">
					<input class="form-control" type="text" name="houseNumber" value="<%= foundHouse.houseNumber%>" required="true">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="streetName" value="<%= foundHouse.streetName%>" required="true">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="postCode" value="<%= foundHouse.postCode%>" required="true">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" value="<%= foundHouse.image%>" required="true">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="askingPrice" value="<%= foundHouse.askingPrice%>" required="true">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Save your changes</button>
					<!-- ^^ btn-block makes it a blocked element -->
				</div>

				<a href="/forsale">View all houses for sale...</a>

			</form>
		</div>
	</div>

	<%- include('partials/footer') %>

</div>