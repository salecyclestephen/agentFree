<%- include('partials/header') %>

<div class="container">
	
	<header class="jumbotron">
		<!-- this container allows the spacing when down to mobile look just right-->
		<div class="container">
			<h3>Could this be your next home?</h3>
			<p>house address to be added here........</p>
		</div>
	</header>

	<div class="row">
		<div class="col-lg-12">
			<h3><%= foundHouse.houseNumber %> <%= foundHouse.streetName %> <%= foundHouse.postCode %></h3>
		</div>

		<img src="<%= foundHouse.image %>">

		<h3><%= foundHouse.askingPrice %></h3>


		<h5>Added: <%= foundHouse.dateAdded %></h5>
		<h5>Last Updated: <%= foundHouse.modifiedDate %></h5>

	</div>

	<div class="caption">
		<a href="/forsale/<%= foundHouse.id %>/edit" class="btn btn-primary">Edit Listing</a>
	</div>

	<br>
	<br>
	<!-- DELETE needs to be in a form -->
	<form action="/forsale/<%= foundHouse.id %>?_method=DELETE" method="POST">
		<button class="btn btn-primary" onclick="return confirm('Are you sure to delete?')">Delete Listing</button>
	</form>
	<br>
	<br>			

	<a href="/forsale">Back to search results...</a>

	<%- include('partials/footer') %>

</div>

